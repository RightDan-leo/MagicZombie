  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "server:dev": "cross-env NODE_ENV=development ts-node --project tsconfig.server.json --esm server/index.ts",
